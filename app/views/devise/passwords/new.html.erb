<div class="container">
<div id="main-back" style="margin-top: 60px"> <!-- just temporary... !-->
<div class="form-wrapper">
<div id="content">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
    <div class="form-group text-center">
    <h2>Forgot your password?</h2>
              <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'input-lg' } %>
              <%= f.button :submit, "Send me reset password instructions", class: 'btn-lg btn-info btn-info' %>
              <% end %>
              <%= button_to "Cancel", root_path, {:method => :get, :class=>"btn-lg btn-info"} %>
              </div>
</div>
</div>
</div>
</div>
